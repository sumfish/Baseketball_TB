<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="#D4DBE0"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Perspecitve Control"
                android:textStyle="bold" />


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_timeline_relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/btn_select_3PP"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3PP"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/perspective_button"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/btn_select_1PP_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/perspective_button"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/btn_select_1PP_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/perspective_button"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/btn_select_1PP_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/perspective_button"/>
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp">

        <Button
            android:id="@+id/btn_select_1PP_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/perspective_button"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/btn_select_1PP_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/perspective_button"/>
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
