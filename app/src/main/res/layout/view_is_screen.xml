<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:id="@+id/layout_screen"
    android:background="@drawable/screen_layout">

    <TextView
        android:id="@+id/text_screen"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:background="@xml/screen_dialog_text"
        android:layout_gravity="center"
        android:text="Screen?"
        android:gravity="center"
        android:fontFamily="casual"
        android:textSize="12sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/screen_choose_layout">

        <ImageButton
            android:id="@+id/button_screen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:scaleType='fitXY'
            android:src="@drawable/img_yes"
            android:background="@drawable/screen_button_background"/>

        <ImageButton
            android:id="@+id/button_no_screen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType='fitXY'
            android:layout_marginRight="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:src="@drawable/img_no"
            android:background="@drawable/screen_button_background" />

    </LinearLayout>

    <!--
    <com.mislab.tacticboard.CircularControl
