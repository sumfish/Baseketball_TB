<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:id="@+id/main"
       android:background="@drawable/court"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button02"
			android:minHeight="0dp" 
	       android:minWidth="0dp"
			android:text="戰術繪製"
		/>
    <Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/half"
			android:minHeight="0dp" 
	       android:minWidth="0dp"
			android:text="半場"
			android:layout_toRightOf="@+id/button02"
		/>
    <ImageView
               android:id="@+id/h_court"
               android:layout_width="fill_parent"
               android:layout_height="700dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="60dp"
               android:layout_marginLeft="160dp"
               android:gravity="center"
               android:src="@drawable/h_court"
               />
    <ImageView
               android:id="@+id/image_p1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="60dp"
               android:layout_marginLeft="160dp"
               android:src="@drawable/ic_launcher" />
       <ImageView
               android:id="@+id/image_p2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="180dp"
               android:layout_marginLeft="100dp"
               android:src="@drawable/ic_launcher" />
       <ImageView
               android:id="@+id/image_p3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="260dp"
               android:layout_marginLeft="275dp"
               android:src="@drawable/ic_launcher" />
       <ImageView
               android:id="@+id/image_p4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="180dp"
               android:layout_marginLeft="450dp"
               android:src="@drawable/ic_launcher" />
       <ImageView
               android:id="@+id/image_p5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="60dp"
               android:layout_marginLeft="390dp"
               android:src="@drawable/ic_launcher" />
       <ImageView
               android:id="@+id/image_ball"
               android:layout_width="30dp"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="260dp"
               android:layout_marginLeft="325dp"
               android:src="@drawable/twobasketball" />
    
    
    

</RelativeLayout>
